<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="5dp"
                android:layout_margin="5dp"
    >

  <TextView
      android:id="@+id/view_setting_item_tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="24sp"
      android:text="Auto update"
      />

  <TextView
      android:id="@+id/view_setting_item_tvDesc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/view_setting_item_tvTitle"
      android:layout_marginTop="2dp"
      android:textSize="18sp"
      android:text="Auto update on"
      />

  <CheckBox
      android:id="@+id/view_setting_item_cbStatus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_alignParentBottom="true"
      android:background="#a000" />


</RelativeLayout>